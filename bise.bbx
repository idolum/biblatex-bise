\DefineBibliographyStrings{ngerman}{pages={S}}

\DeclareNameFormat{biseauthor}{%
  #1\space#4
  \ifthenelse{\value{listcount}<\value{liststop}}
    {\addcomma\space}
    {}}
    
\DeclareFieldFormat{bisetitle}{%
  \MakeSentenceCase*{#1}}

\DeclareFieldFormat{bisejournaltitle}{%
  #1}

\DeclareFieldFormat{bisepages}{%
  #1}
  
\DeclareFieldFormat{bisepages-collection}{%
  \bibstring{pages} #1}

\DeclareFieldFormat{doi}{%
  \href{http://dx.doi.org/#1}{#1}}
  
\DeclareFieldFormat{parens}{%
  \mkbibparens{#1}}

\DeclareListFormat{biselocation}{%
  \ifthenelse{\value{listcount}=1}%
    {#1}%
    {}}
 
\DeclareFieldFormat{biseurl}{%
  \url{#1}}
      
\newbibmacro{organization}{%
  \printlist{organization}}

\newbibmacro{year}{%
  \printfield[parens]{year}}

\renewbibmacro*{author}{%
  \ifnameundef{author}%
    {\iflistundef{organization}%
      {\printtext{oV}}%
      {\usebibmacro{organization}}}%
    {\printnames[biseauthor]{author}}}

\renewbibmacro{title+subtitle}{%
  \printfield[bisetitle]{title}%
  \iffieldundef{subtitle}%
    {}%
    {\setunit*{\addcolon\space}
     \printfield[bisetitle]{subtitle}}}%

\renewbibmacro{journal}{%
  \printfield[bisejournaltitle]{journaltitle}%
  \setunit*{\addspace}%
  \printfield{volume}%
  \iffieldundef{number}%
    {}%
    {\printtext{(}%
     \printfield{number}%
     \printtext{)}}}
  
\newbibmacro{pages}{%
  \iffieldundef{pages}%
    {}
    {\printfield[bisepages]{pages}}}
  
\newbibmacro{pages-collection}{%
  \iffieldundef{pages}%
    {}
    {\printfield[bisepages-collection]{pages}}}

\newbibmacro{doi}{%
  \iffieldundef{doi}%
    {}%
    {\bibstring{doi}%
	 \addcolon\space
	 \printfield[bisedoi]{doi}}}

\newbibmacro{edition}{%
  \iffieldundef{edition}%
    {}%
    {\setunit*{\addcomma\addspace}%
     \printfield{edition}}}
     
\renewbibmacro{editor}{%
  \ifnameundef{editor}%
    {}%
    {\printnames[biseauthor]{editor}%
     \addspace
     \mkbibparens{\bibstring{editor}}}}
  
\newbibmacro{publisher+location}{%
  \printlist[1-1]{publisher}%
  \setunit*{\addcomma\addspace}%
  \printlist[biselocation]{location}}
  
\renewbibmacro{booktitle}{%
  \printfield[bisetitle]{booktitle}
  \iffieldundef{booksubtitle}%
    {}%
    {\addcolon\space
     \printfield[bisetitle]{booksubtitle}}}
     
\newbibmacro{organization+venue}{%
  \printlist{organization}%
  \addcomma\space
  \printfield{venue}}

\newbibmacro{venue}{%
  \printfield{venue}}

\newbibmacro{type}{%
  \printfield{type}}

\renewbibmacro*{url}{%
  \printfield[biseurl]{url}}
  
\newbibmacro{urldate}{%
  \bibstring{urlseen}%
  \addspace
  \printurldate}
    
\newbibmacro{institution}{%
  \printlist{institution}}
  
\DeclareBibliographyDriver{article}{%
  \usebibmacro{bibindex}%
  \usebibmacro{begentry}%
  \usebibmacro{author}%
  \setunit*{\addspace}%
  \usebibmacro{year}%
  \setunit*{\addspace}%
  \usebibmacro{title+subtitle}%
  \newunit
  \usebibmacro{journal}%
  \setunit*{\addcolon}%
  \usebibmacro{pages}%
  \newunit
  \usebibmacro{doi}%
  \finentry}

\DeclareBibliographyDriver{book}{%
  \usebibmacro{bibindex}%
  \usebibmacro{begentry}%
  \usebibmacro{author}%
  \setunit*{\addspace}%
  \usebibmacro{year}%
  \setunit*{\addspace}%
  \usebibmacro{title+subtitle}%
  \usebibmacro{edition}%
  \newunit
  \usebibmacro{publisher+location}%
  \finentry}


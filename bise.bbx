                            urldate=iso8601}%

\renewcommand*{\finentrypunct}{}
\renewcommand*{\nameyeardelim}{\space}

\DefineBibliographyStrings{ngerman}{andothers={et\addabbrvspace al\adddot}}
\DefineBibliographyStrings{german}{andothers={et\addabbrvspace al\adddot}}

\ProvidesFile{bise.cbx}

\ExecuteBibliographyOptions{labelyear,
                            uniquename,
                            uniquelist,
                            autocite=inline}

\newbibmacro*{pcite}{%
  \printtext[bibhyperref]{%
    \ifnameundef{labelname}%
      {\printlist{organization}}%
      {\printnames{labelname}}%
    \setunit{\nameyeardelim}%
    \printfield{labelyear}%
	\usebibmacro{postnote}}}

\renewbibmacro*{cite}{%
  \ifnameundef{labelname}%
    {\printlist{organization}}%
    {\printnames{labelname}}%
  \addspace
  \mkbibparens{\printtext[bibhyperref]{\printfield{labelyear}\usebibmacro{postnote}}}}
  
\DeclareCiteCommand{\parencite}[\mkbibparens]
  {\usebibmacro{prenote}}
  {\usebibmacro{citeindex}%
   \usebibmacro{pcite}}
  {\multicitedelim}
  {}
 
\DeclareCiteCommand{\cite}%
  {\usebibmacro{prenote}}
  {\usebibmacro{cite}}
  {\multicitedelim}
  {}
  
\endinput
